
@{
    ViewData["Title"] = "Data";
}


@section Styles {
    <link rel="stylesheet" href="/mazer/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Course Table</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="DataTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>DepartmentId</th>
                                    <th>Date of Birth</th>
                                    <th style="width:250px">Action</th>
                                </tr>
                            </thead>

                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>DepartmentId</th>
                                    <th>Date Of Birth</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                        <partial name="_DeletePopupPartial" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script src="/mazer/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/mazer/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#DataTable").DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "/Student/GetData",
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 3,
                        "render": function (data, type, row) {
                            return `<button type="submit" class="btn btn-info btn-sm"
                                        onclick="window.location.href='/Student/Edit/${data}'" value='${data}'>
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </button>
                                        <button type="submit" class="btn btn-danger btn-sm show-bs-modal"
                                        href="#" data-id='${data}' value='${data}'>
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </button>`;
                        }
                    }
                ]
            });
            $('#DataTable').on('click', '.show-bs-modal', function (event) {
                var id = $(this).data("id");
                var modal = $("#modal-default");
                modal.find('.modal-body p').text('Are you sure you want to delete this record?')
                $("#deleteId").val(id);
                $("#deleteForm").attr("action", "/Student/Delete")
                modal.modal('show');
            });
            $("#deleteButton").click(function () {
                $("#deleteForm").submit();
            });
        });
    </script>
}

